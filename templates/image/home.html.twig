{% extends 'base.html.twig' %}

{% block title %}
    Site Image
{% endblock title %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            margin: 0px;
            padding: 0px;
        }

        .container-fluid { 
            padding-right: 0px !important;
            padding-left: 0px !important;
        }

        #title-nav {
            font-size: 4em;
        }

        .item-nav {
            font-size: 2em;
        }
    </style>
{% endblock stylesheets %}
{% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a id="title-nav" class="navbar-brand" href="#">Navigation</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link item-nav" href="{{ path('image_home_1') }}">Home 1<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item active">
                <a class="nav-link item-nav" href="{{ path('image_home_2')}}">Home 2<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle item-nav" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Dropdown link
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    {% if files is defined and files|length > 0 %}
                        {% for file in files %}
                            <a class="dropdown-item" href="{{ path('image_download', {'nom': file}) }}" download="{{file}}"> {{ file }}</a>
                        {% endfor %}
                    {% endif %}
                </div>
            </li>
        </ul>
        </div>
    </nav>
{% endblock %}
{% block body %}
   
{% endblock body %}