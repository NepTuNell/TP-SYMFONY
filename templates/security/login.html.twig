{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div class="row d-flex flex-row justify-content-center align-items-center container_size_90_vh">
    <div class="col-4" id="container_log"> 
        <form method="post">
            <h1 class="text-center pb-5">Se connecter</h1>
            <div class="form-group row">
                <label class="col-4" for="inputUsername">Username</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="col-8 form-control" required autofocus>
            </div>
            <div class="form-group row"> 
                <label class="col-4" for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="col-8 form-control" required>
            </div>
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
       
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
            <div class="form-group row">
                <div class="col-12">
                    <button class="btn btn-success" type="submit">
                        Sign in
                    </button>
                </div>
            </div>
        </form>

        <div><a class="text-success" href="{{path('user_new')}}">Pas encore inscrit ?</a></div> 

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

    </div>
</div>

{% endblock %}
