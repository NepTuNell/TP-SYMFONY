<!DOCTYPE html>
<html lang="fr">
    <head>
        <!-- Required meta tags -->
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Page Title -->
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        {% block stylesheets %}
            <!-- Bootstrap CSS -->
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

            <!-- CSS personnel -->
            <link rel="stylesheet" href="{{ asset('css/baseLayout.css') }}" />

            <!-- Lien icone font awesome et CSS -->
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">  
        {% endblock %}

    </head>
    <body>
        <div class="container-fluid">
            <div class="row" id="container_user">
                {% if not app.user %} 
                    <div>
                        <a href="{{path("app_login")}}" style="font-size: 1.6rem;">Se connecter</a>
                    </div> 
                {% else %} 
                    <div>
                        <a href="{{path("user_edit", {'id': app.user.id})}}" style="font-size: 1.6rem; margin-right: 10%; white-space: nowrap">Mon compte</a>
                        <a href="{{path("app_logout")}}" style="font-size: 1.6rem; margin-right: 10%; white-space: nowrap">Se d√©connecter</a>
                    </div> 
                    <div id="user_profile_avatar" class="justify-content-center">
                        <div class="text-center text-uppercase font-weight-bold text-light">
                            {{app.user.firstname|first}}{{app.user.lastname|first}}
                        </div> 
                    </div>  
                {% endif %}
            </div>
            <div class="container"> 
                {% block body %}
                {% endblock %}
            </div>
        </div>
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>